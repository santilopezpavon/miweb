---
import BaseLayout from "./BaseLayout.astro";
import {colGrid, containerGrid, rowGrid} from "../Utils/ClassGenerator"
import {fontSize} from "../Utils/FontsSizes"

const html = await Astro.slots.render('default');

console.log();
---

<BaseLayout title="Astro">
    <div class={containerGrid() +  " text-white"}>
        <div class={rowGrid()}>
            <div class={colGrid("md:w-10/12 blog-content")}>
                <Fragment set:html={html} />
            </div>
        </div>
    </div>
</BaseLayout>

<style lang="scss" is:global>
    .blog-content {
        * {
            line-height: 1.5;
            font-size: 1.8rem;
        }
        h1 {
            font-family: "Sora Variable", sans-serif;
            font-size: 3rem;
            font-weight: 700;
            background: #875087;
            background: linear-gradient(to right, #875087 0%, #fff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 2.5rem;
        }

        p {
            margin-bottom: 2rem;
        }
        
        h2{
            font-family: "Sora Variable", sans-serif;
            font-size: 2.4rem;
            font-weight: 700;
            background: #875087;
            background: linear-gradient(to right, #875087 0%, #fff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 2.5rem;

        }
        h3 {
            font-family: "Sora Variable", sans-serif;
            font-size: 1.8rem;
            font-weight: 700;
            background: #875087;
            background: linear-gradient(to right, #875087 0%, #fff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 2.5rem;

        }
    }

</style>
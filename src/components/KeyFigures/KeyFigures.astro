---
import KeyFigure from "./KeyFigure.astro";

let fechaActual = new Date();
let currentYear = Number(fechaActual.getFullYear());

const data = [
    {
        "bigText": (currentYear - 2013) + " Años",
        "smallText": "Desarrollando webs"
    },
    {
        "bigText": (currentYear - 2015) + " Años",
        "smallText": "Desarrollando Drupal"
    },
    {
        "bigText": (currentYear - 2021) + " Años",
        "smallText": "Desarrollando NextJS / React JS"
    }
];
---

<div class="element max-w-screen-xl mx-auto flex flex-wrap  relative ">
    {
           data.map((item) => (
           <div class="w-full md:w-1/3 px-3.5 relative text-white mb-16 md:mb-0">
                <KeyFigure bigText={item.bigText}  smallText={item.smallText}/>
            </div>
            ))
    }
 
  
</div>

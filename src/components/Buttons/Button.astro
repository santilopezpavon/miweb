---
const { label, link, type='big', target } = Astro.props;
---

{
    type == 'big' ? (
        <a class="btn" href={link} target={target}>{label}</a>
    ): type == 'small' ?(
        <a class="btn btn-small" href={link} target={target}>{label}</a>
    ): null
}

<style lang="scss">
    .btn {
        transition: 0.3s;
        display: inline-block;
        text-decoration: none;
        line-height: 1;
        font-weight: 500;
        color: #B592F7;
        border-radius: 50px;
        padding: 17px 35px;
        border: 1px solid #B592F7;
        -webkit-transition: 0.3s;
        -o-transition: 0.3s;
        transition: 0.3s;
        letter-spacing: 1px;
        &:hover {
            background-color: #B592F7;
            color: white;
        }
    }

    .btn-small {
        padding: 8px 13px;
        border-radius: 0;
        font-weight: 400;
    }
</style>
---
import { getCollection } from 'astro:content';
import {fontSize} from "../../Utils/FontsSizes";

import BaseLayout from "../../layouts/BaseLayout.astro";
import List from "../../components/Lists/List.astro";
const blogEntries = await getCollection('blog');
import { colGrid, containerGrid, rowGrid } from "../../Utils/ClassGenerator.js";
import Text from '../../components/Text/Text.astro';
import Breadcrumbs from '../../components/Breadcrumbs/Breadcrumbs.astro';
import { getBreadCrumb } from "../../Utils/LinksGenerator";
const currentPath = Astro.url.pathname;
const breadCrumbLinks = getBreadCrumb(currentPath, "Guías básicas");
const breadcrumbItems = breadCrumbLinks;
---

<BaseLayout title="Guías básicas" description="">
    <div class={containerGrid("text-white")}>
        <div class={colGrid()} >
            <Breadcrumbs items={breadcrumbItems} />
        </div>
    </div>
    <Text 
        pretitle="Aprende con nosotros" 
        title="Guías de Desarrollo Web: Dominando los Fundamentos" 
        description="Bienvenido a nuestra sección de guías de desarrollo web. Aquí encontrarás una serie de publicaciones detalladas que te ayudarán a entender y dominar los fundamentos del desarrollo web, incluyendo temas como Git, HTML, CSS, JavaScript y mucho más. No importa si eres un principiante buscando aprender desde cero o un desarrollador experimentado buscando refrescar tus conocimientos, nuestras guías están diseñadas para ayudarte a mejorar tus habilidades y llevar tu desarrollo web al siguiente nivel"
    />
    <List items={blogEntries} />
</BaseLayout>

<style lang="scss">
    .banner-top {
        height: 560px;
        position: relative;
        z-index: 1;
        overflow: hidden;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 2px 4px -2px rgba(0, 0, 0, 0.6);
        margin: 0 4rem 4rem 4rem;
        img {
            z-index: -1;
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: top;

        }
    }
</style>

